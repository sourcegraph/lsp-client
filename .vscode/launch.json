  version: "0.2.0",
  configurations: [
    {
      type: "node",
      request: "launch",
      name: "Mocha Tests",
      program: "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      args: ["--no-timeouts", "--colors", "--require", "ts-node/register"],
      skipFiles: ["async_hooks.js", "inspector_async_hook.js"],
      env: {
        TS_NODE_COMPILER_OPTIONS: '{"module":"commonjs"}',
      },
      console: "integratedTerminal",
      smartStep: false,
    },
  ],
}
