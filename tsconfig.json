{
  extends: "@sourcegraph/tsconfig",
  compilerOptions: {
    target: "es2018",
    moduleResolution: "node",
    typeRoots: ["src/types", "node_modules/@types"],
    module: "esnext",
    lib: ["esnext", "webworker"],
    sourceMap: true,
    declaration: true,
    declarationMap: true,
    outDir: "dist",
    rootDir: "src",
    esModuleInterop: true,
    allowSyntheticDefaultImports: true,
  },
}
